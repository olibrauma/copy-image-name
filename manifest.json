{
  "manifest_version": 3,
  "name": "Copy Image Name",
  "version": "1.0",
  "description": "Copy image name at right click context menu.",
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "icons": {
    "32": "icons/icon.svg",
    "64": "icons/icon.svg"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "copy-image-name@olibrauma.com"
    }
  }
}
